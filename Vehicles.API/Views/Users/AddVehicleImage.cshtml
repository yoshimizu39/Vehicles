@model Vehicles.API.Models.VehiclePhotoViewModel

@{
    ViewData["Title"] = "AddVehicleImage";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />

<h1>Adicionar</h1>
<h4>Fotos de Vehículos</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddVehicleImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleId" />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" value="AddVehicleImage" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk">Agregar-Foto</i></button>
                <a asp-action="EditVehicle" asp-route-id="@Model.VehicleId" class="btn btn-success"><i class="glyphicon glyphicon-edit">Editar-Vehicle</i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
